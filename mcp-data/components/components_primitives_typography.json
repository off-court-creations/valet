    "title"
  ],
  "props": [
    {
      "name": "variant",
      "type": "'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6' | 'body' | 'subtitle' | 'button'",
      "required": false,
      "default": "'body'",
      "description": "Typography style preset (semantic variant)"
    },
    {
      "name": "bold",
      "type": "boolean",
      "required": false,
      "default": "false",
      "description": "Deprecated in favor of weight (maps to 700)"
    },
    {
      "name": "italic",
      "type": "boolean",
      "required": false,
      "default": "false",
      "description": "Italic font style"
    },
    {
      "name": "weight",
      "type": "number | 'regular' | 'medium' | 'semibold' | 'bold'",
      "required": false,
      "default": "400",
      "description": "Preferred way to set font weight; clamps 100..900"
    },
    {
      "name": "tracking",
      "type": "number | 'tight' | 'normal' | 'loose'",
      "required": false,
      "enumValues": [
        "tight",
        "normal",
        "loose"
      ],
      "default": "'normal'",
      "description": "Letter-spacing; numbers treated as px"
    },
    {
      "name": "leading",
      "type": "number | 'tight' | 'normal' | 'loose'",
      "required": false,
      "enumValues": [
        "tight",
        "normal",
        "loose"
      ],
      "default": "1.4",
      "description": "Unitless line-height (1 for button)"
