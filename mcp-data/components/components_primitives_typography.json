    {
      "name": "optical",
      "type": "'auto' | number",
      "required": false,
      "default": "'auto'",
      "description": "Optical sizing: CSS font-optical-sizing or opsz axis"
    },
    {
      "name": "fluid",
      "type": "boolean",
      "required": false,
      "default": "false",
      "description": "Use clamp() from theme.typographyFluid when available"
    },
    {
      "name": "centered",
      "type": "boolean",
      "required": false,
      "default": "false",
      "description": "Center-align and auto-margin element"
    },
    {
      "name": "noSelect",
      "type": "boolean",
      "required": false,
      "default": "false",
      "description": "Disable text selection (user-select: none)"
    },
    {
      "name": "fontSize",
      "type": "string",
      "required": false,
      "default": "-",
      "description": "Explicit CSS font-size override"
    },
    {
      "name": "scale",
      "type": "number",
      "required": false,
      "default": "-",
      "description": "Multiply the computed size (after fluid/autoSize)"
    },
    {
      "name": "autoSize",
      "type": "boolean",
      "required": false,
      "default": "false",
      "description": "Use breakpoint size for variant (xs–xl)"
    },
    {
      "name": "color",
      "type": "string",
      "required": false,
      "default": "-",
      "description": "Text color; defaults to var(--valet-text-color)"
    },
    {
      "name": "family",
      "type": "'heading' | 'body' | 'mono' | 'button'",
      "required": false,
      "enumValues": [
        "heading",
        "body",
        "mono",
        "button"
      ],
      "default": "-",
      "description": "Select a theme font family"
    },
    {
      "name": "fontFamily",
      "type": "string",
      "required": false,
      "default": "-",
      "description": "Override font family (discouraged; prefer family)"
    },
    {
      "name": "whitespace",
      "type": "'normal' | 'pre' | 'pre-wrap' | 'pre-line'",
      "required": false,
      "default": "'normal'",
      "enumValues": [
        "normal",
        "pre",
        "pre-wrap",
        "pre-line"
      ],
      "description": "Controls line breaking and whitespace handling"
    },
    {
      "name": "sx",
      "type": "Sx",
      "required": false
    },
    {
      "name": "preset",
      "type": "string | string[]",
      "required": false,
      "default": "-",
      "description": "Apply style presets (define via definePreset())"
    }
  ],
  "cssVars": [
